<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:text="@string/list_item_contact_name"/>

    <TextView
            android:id="@+id/contact_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact_name"
            android:layout_below="@+id/contact_name"
            android:padding="4dp"
            android:text="@string/list_item_contact_street"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_contacted_checkbox"
            android:checked="false" android:layout_alignBottom="@+id/contact_street"
            android:layout_alignParentRight="true"
            android:padding="4dp"/>

</RelativeLayout>